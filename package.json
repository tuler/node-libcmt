{
    "name": "@tuler/node-libcmt",
    "version": "0.0.0",
    "description": "Cartesi libcmt Node.js bindings",
    "main": "dist/binding.js",
    "module": "dist/binding.mjs",
    "types": "dist/binding.d.ts",
    "exports": {
        ".": {
            "require": "./dist/binding.js",
            "import": "./dist/binding.mjs",
            "types": "./dist/binding.d.ts"
        }
    },
    "scripts": {
        "build": "run-s compile bundle",
        "bundle": "tsup",
        "clean": "node-gyp clean",
        "compile": "node-gyp build",
        "configure": "node-gyp configure",
        "install": "node-pre-gyp install --fallback-to-build",
        "package": "node-pre-gyp package",
        "release": "tsup && changeset publish",
        "test": "vitest"
    },
    "gypfile": true,
    "binary": {
        "module_name": "node_libcmt",
        "module_path": "./lib/binding/",
        "host": "https://github.com/tuler/node-libcmt/releases/download/",
        "remote_path": "{version}"
    },
    "keywords": [
        "cartesi",
        "bindings",
        "node.js"
    ],
    "author": "Danilo Tuler",
    "license": "Apache-2.0",
    "dependencies": {
        "@mapbox/node-pre-gyp": "^1.0.11",
        "bindings": "^1.5.0",
        "node-addon-api": "^8.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@types/node": "^20.12.11",
        "node-gyp": "^10.1.0",
        "node-gyp-build": "^4.8.1",
        "node-pre-gyp-github": "^1.4.4",
        "npm-run-all": "^4.1.5",
        "prebuildify": "^6.0.1",
        "prettier": "^3.2.5",
        "tsup": "^8.0.2",
        "tsx": "^4.9.3",
        "typescript": "^5.4.5",
        "vitest": "^1.6.0"
    },
    "files": [
        "dist",
        "src",
        "binding.gyp"
    ],
    "packageManager": "pnpm@9.1.0"
}
